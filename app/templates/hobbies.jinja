{% extends "base.jinja" %}

{% block title %} Hobbies {% endblock %}


{% block name %}
<div class = "underline work_experience_font"> {{title}}'s Hobbies! </div>

{% endblock %}

{% block content %}

<div class = "row">
    {% for a in pics%}
        <div class = " col-sm-12 col-lg-4"> 
            <div class = "card hobbies_shadowing margins" style = "width: 300px;">
                <img src = "{{pics[a]}}" class = "card-img-top">
                <div class = "card-body ">
                    <h4 class = "card-title">{{hobbies_name[a]}}</h4>
                <p class = "card-text">{{hobbies_memos[a]}}</p></div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>



{% endblock %}



